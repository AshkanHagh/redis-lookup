{
  "compilerOptions": {
      "noImplicitAny": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "declaration": true,
      "isolatedModules": true,
      "noEmit": true,
      "outDir": "dist",
      "strict": true,
      "skipLibCheck": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noPropertyAccessFromIndexSignature": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}